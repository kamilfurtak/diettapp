{
  "mcpServers": {
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "chrome-devtools-mcp@latest",
        "--headless=true",
        "--executablePath=/nix/store/dbzr3bfkqg0dlcq657rhf2zhjg2ryi8i-idx-builtins/bin/chromium-browser"
      ]
    },
    "angular-cli": {
      "command": "npx",
      "args": [
        "-y",
        "@angular/cli",
        "mcp"
      ]
    },
    "firebase": {
      "command": "npx",
      "args": [
        "-y",
        "firebase-tools@latest",
        "experimental:mcp"
      ]
    },
    "nx-mcp": {
      "command": "npx",
      "args": [
        "nx-mcp@latest"
      ]
    }
  }
}